{
  "manifest_version": 3,
  "name": "Query Intelligence Tool",
  "version": "1.0.0",
  "description": "Extract real demand signals from Google Suggest with deterministic linguistic rules",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://suggestqueries.google.com/*",
    "https://api.perplexity.ai/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Query Intelligence Tool"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "/icons/icon-16.png",
    "32": "/icons/icon-32.png",
    "48": "/icons/icon-48.png",
    "128": "/icons/icon-128.png"
  }
}
